head
  link(rel='stylesheet' href='https://fonts.googleapis.com/css?family=Ubuntu')
  meta(charset='utf-8')
  title MyLibrary
header
  #div1
    form(method = "post" action = "/adminHelp")
        div
            label Book Name
            input#bookName(name = 'bookName')
        .dist
            label Author Name
            input#Author(name = 'Author')
        .dist
            label Book Cover URL
            input#URL(type='url' name = 'URL')
        .dist
            label Number Of Items
            input#URL(type='Number' name = 'NumberOfItems')
        .dist
            label Price
            input#URL(type='Number' name = 'Price')

        button#btn1(type='button' name='button' onclick ="this.form.submit()") Add Book
#maindiv.grid-container
    each newBook in books
        .grid-item
            center
                img#myImg(src=newBook.link width='120' height='170')
                li  Book Name: #{newBook.bookName}
                li  Author: #{newBook.Author}
                li  Number Of Books: #{newBook.NumberOfItems}
                li  Price: #{newBook.Price} EGP

